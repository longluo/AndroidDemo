<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/id_iv_friends_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/friends_icon_normal" />

    <TextView
        android:id="@+id/id_tv_no_friends_and_explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="朋友列表并没有人哦!\n现在就去认识全球的小伙伴吧！" />

    <LinearLayout
        android:id="@+id/id_ll_explore_button"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dip"
        android:layout_marginRight="35dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/explore_btn"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawablePadding="5.0dip"
            android:gravity="center"
            android:text="去探索" />
    </LinearLayout>

</LinearLayout>