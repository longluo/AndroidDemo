<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Circle ImageView with Border -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!-- Round ImageView -->
    <declare-styleable name="RoundImageView">
        <attr name="radius_left_up" format="dimension" />
        <attr name="radius_left_down" format="dimension" />
        <attr name="radius_right_up" format="dimension" />
        <attr name="radius_right_down" format="dimension" />
    </declare-styleable>
</resources>