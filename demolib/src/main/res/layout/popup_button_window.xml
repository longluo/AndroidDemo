<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_window_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/popup_window_margin_bottom"
        android:layout_marginEnd="@dimen/popup_window_margin_right"
        android:layout_marginLeft="@dimen/popup_window_margin_left"
        android:layout_marginRight="@dimen/popup_window_margin_right"
        android:layout_marginStart="@dimen/popup_window_margin_left"
        android:background="@drawable/popup_window_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_window_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_window_bg_top_selector"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="Title"
            android:textColor="@color/popup_window_title_color"
            android:textSize="18sp" />

        <View
            android:id="@+id/popup_window_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/popup_window_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text="Message"
            android:textColor="@color/popup_window_text_color"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/popup_window_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" />
    </LinearLayout>
</RelativeLayout>