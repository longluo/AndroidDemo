<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/list_item_lefticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:contentDescription="@string/arrow"
            android:scaleType="centerInside"
            android:src="@drawable/arrow"
            android:visibility="gone" />

        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/list_item_lefticon"
            android:text="@string/age" />

        <LinearLayout
            android:id="@+id/list_item_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/send_verify_gray"
                android:textSize="15sp" />

            <Button
                android:id="@+id/list_item_righticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15.0dip"
                android:background="@drawable/mail_num"
                android:contentDescription="@string/arrow"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/list_item_redpointicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:background="@drawable/avatar_man" />

                <ImageView
                    android:id="@+id/reddot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/imageview"
                    android:layout_alignTop="@id/imageview"
                    android:layout_marginRight="-4.0dip" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/new_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/list_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:background="#00000000"
                android:contentDescription="@string/arrow"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>